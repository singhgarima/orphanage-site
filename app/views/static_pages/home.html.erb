<% content_for(:read_more) do %>
	<div id="more">
		We are Angels Orphanage, a volunteer-run orphanage in Bangalore, India. 
		Our mission is to provide the shelter, education, medical attention, and love that every child deserves. 
	</div>
<% end %>

<div id='pic_container'>
	<% content_for(:main_content) do %>
		<div class="slideshow"> 

			<img src="/images/<%= File.basename(@images.shift) %>" width="200" height="200" />

			<% @images.each do |pic| %>
				<img style="visibility: hidden;" src="/images/<%= File.basename(pic) %>" width="200" height="200" />
			<% end %>	
		</div>
		<div id='img_caption'></div>
	<% end %>

<script type="text/javascript">
	var captions = <%= @captionsArray %>;
</script>

<% content_for(:right_column) do %>
	<div id="at-a-glance">
		At a Glance...
		<ul>
			<li>Located in Shivajinagar, Bangalore</li>
			<li>70 children with a maximum capacity of 75</li>
			<li>Boys and girls from age 3 to 19</li>
			<li>Primary caretaker is Sabina</li>
			<li>Run 100% on volunteer staff and donations</li>
			<li>Leasing from corporation</li>
		</ul>
	</div>
<% end %>
